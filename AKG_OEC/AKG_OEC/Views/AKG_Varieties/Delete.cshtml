@model AKG_OEC.Models.Variety

@{
    ViewData["Title"] = "Delete Variety";
}

@if (ViewBag.cropName != null)
{
    <h2>Delete Variety for @ViewBag.cropName Crop</h2>
}
else
{
    <h2>Delete Variety</h2>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Variety</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Crop)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Crop.CropId)
