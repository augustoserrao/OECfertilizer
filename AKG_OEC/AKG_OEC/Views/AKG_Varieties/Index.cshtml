@model IEnumerable<AKG_OEC.Models.Variety>

@{
    ViewData["Title"] = "Variety Listing";
}

@if (ViewBag.cropName != null)
{
    <h2>Variety Listing for @ViewBag.cropName Crop</h2>
}
else
{
    <h2>Variety Listing</h2>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="AKG_Plot" asp-action="Index" asp-route-varietyId="@item.VarietyId" asp-route-varietyName="@item.Name">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VarietyId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.VarietyId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.VarietyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
