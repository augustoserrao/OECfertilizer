@model IEnumerable<AKG_OEC.Models.Treatment>

@{
    ViewData["Title"] = "Treatment Listing";
}

@if (ViewBag.farmName != null)
{
    <h2>Treatment Listing for plot at @ViewBag.farmName</h2>
}
else
{
    <h2>Treatment Listing</h2>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Moisture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yield)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plot)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="AKG_TreatmentFertilizers" asp-action="Index" asp-route-treatmentId="@item.TreatmentId">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Moisture)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yield)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Plot.PlotId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TreatmentId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TreatmentId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TreatmentId">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>
<p>
    <a asp-controller="AKG_Plot" asp-action="Index" asp-route-plotId="@ViewBag.plotId">Back to Plots</a>
</p>
